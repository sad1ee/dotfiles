{{- $osid := .chezmoi.os -}}
{{- if hasKey .chezmoi.osRelease "id" -}}
{{-   $osid = printf "%s-%s" .chezmoi.os .chezmoi.osRelease.id -}}
{{- end -}}

encryption = "age"

[age]
  identity = "~/.config/age/private.txt"
  recipientsFile = "~/.config/age/public.txt"

[merge]
  command = "nvim"
  args = [
    "-d",
    "{{ "{{" }} .Source {{ "}}" }}",
    "{{ "{{" }} .Destination {{ "}}" }}"
  ]

[data]
  osid = {{ $osid | quote }}

[hooks.read-source-state.pre]
  command = ".local/share/chezmoi/.install-rbw.sh"
