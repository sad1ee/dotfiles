{{ if eq .osid "linux-ubuntu" }}
.local/bin/nvim:
  type: "archive-file"
  url: {{ gitHubReleaseAssetURL "neovim/neovim" "stable" "nvim-linux-x86_64.tar.gz" | quote }}
  path: "nvim-linux-x86_64/bin/nvim"
  executable: true
  refreshPeriod: "168h"

.local/bin/oh-my-posh:
  type: "file"
  url: {{ gitHubLatestReleaseAssetURL "JanDeDobbeleer/oh-my-posh" "posh-linux-amd64" | quote }}
  executable: true
  refreshPeriod: "168h"

.local/bin/zoxide:
  type: "archive-file"
  url: {{ gitHubLatestReleaseAssetURL "ajeetdsouza/zoxide" "zoxide-*-x86_64-unknown-linux-musl.tar.gz" | quote }}
  path: "zoxide"
  executable: true
  refreshPeriod: "168h"

.local/bin/fzf:
  type: "archive-file"
  url: {{ gitHubLatestReleaseAssetURL "junegunn/fzf" "fzf-*-linux_amd64.tar.gz" | quote }}
  path: "fzf"
  executable: true
  refreshPeriod: "168h"

.local/share/zinit/zinit.git:
  type: "git-repo"
  url: "https://github.com/zdharma-continuum/zinit.git"
  refreshPeriod: "168h"

.local/bin/rbw:
  type: "archive-file"
  url: {{ gitHubLatestReleaseAssetURL "doy/rbw" "rbw_*_linux_amd64.tar.gz" | quote }}
  path: "rbw"
  executable: true
  refreshPeriod: "168h"

.local/bin/rbw-agent:
  type: "archive-file"
  url: {{ gitHubLatestReleaseAssetURL "doy/rbw" "rbw_*_linux_amd64.tar.gz" | quote }}
  path: "rbw-agent"
  executable: true
  refreshPeriod: "168h"
{{ end }}
