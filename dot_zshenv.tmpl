# XDG
export XDG_DATA_HOME="${XDG_DATA_HOME:-$HOME/.local/share}"
export XDG_CONFIG_HOME="${XDG_CONFIG_HOME:-$HOME/.config}"
export XDG_STATE_HOME="${XDG_STATE_HOME:-$HOME/.local/state}"
export XDG_CACHE_HOME="${XDG_CACHE_HOME:-$HOME/.cache}"
export LOCAL_BIN_HOME="${HOME}/.local/bin"
export TMPDIR="${HOME}/.local/tmp"

# Others
export RUSTC_WRAPPER=sccache

# TEST: trying to clean up home
export VAGRANT_HOME="${XDG_DATA_HOME}/vagrant"
export ZSH_COMPDUMP="${XDG_CACHE_HOME}/zsh/cache/.zcompdump"

# ZSH
export HISTFILE="${XDG_STATE_HOME}/zsh_history"
export HISTSIZE=5000
export SAVEHIST=$HISTSIZE
export HISTDUP=erase

# Defaults
export EDITOR="nvim"
export FZF_DEFAULT_COMMAND='fd --type f'
# export MANPAGER="sh -c 'sed -u -e \"s/\\x1B\\[[0-9;]*m//g; s/.\\x08//g\" | bat -p -lman'"
export MANPAGER='nvim +Man!'
export GIT_CONFIG_GLOBAL="${XDG_CONFIG_HOME}/git/gitconfig"
export FZF_DEFAULT_OPTS="$(tr '\n' ' ' < ${XDG_CONFIG_HOME}/fzf/config)"

# SSH
export SSH_AUTH_SOCK="$XDG_RUNTIME_DIR/rbw/ssh-agent-socket"

# PATH
typeset -U PATH path
path=( \
  "$LOCAL_BIN_HOME" \
  "$path[@]" \
)
export PATH

# TODO: Stoopid tmp nvim fixed
export LC_ALL="C.UTF-8"
export LANG="C.UTF-8"
